<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    app:srcCompat="@drawable/ddd"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#af5f7483"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CARE4U"
        android:layout_marginTop="25dp"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:paddingEnd="32dp"
        android:id="@+id/bigone"
        android:gravity="center"
        android:paddingStart="32dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textColor="@color/white"
        android:layout_below="@id/bigone"
        android:id="@+id/bigtwo"
        android:gravity="center"
        android:textSize="17dp"
        android:text="Using Blockcahin &amp; Biometrics to protect and validate health records and owners identity"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bigtwo"
        android:background="@drawable/white_rounded"
        android:gravity="center"
        android:id="@+id/cont"
        android:onClick="authenticate"
        android:text="Continue as an Health Practitioner"
        android:layout_margin="32dp"/>
</RelativeLayout>