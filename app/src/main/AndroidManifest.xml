<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.innova.care4u">

    <uses-feature
        android:name="android.hardware.fingerprint"
        android:required="true" />

        <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
        <uses-permission android:name="android.permission.CAMERA"/>
        <uses-permission android:name="android.permission.USE_FINGERPRINT" />
        <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:name=".ApplicationInstance"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:theme="@style/myGreyTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddNewRecord" android:theme="@style/myMaterialTheme"/>
        <activity android:name=".AttendNewPatient" android:theme="@style/myBlueTheme"/>
        <activity android:name=".RegisterNewPatient" android:theme="@style/myMaterialTheme"/>
        <activity android:name=".HistoryActivity" android:theme="@style/myBlueTheme"/>
        <activity android:name=".fingerPrintDeals.FingerPrintActivity" android:theme="@style/myGreyTheme"/>
        <activity android:name=".PaymentActivity" android:theme="@style/myPurpleTheme"/>
        <activity android:name=".LargerView" android:theme="@style/myGreyTheme"/>

    </application>


</manifest>